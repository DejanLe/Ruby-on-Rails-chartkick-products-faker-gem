<div class="allproducts">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
<%= bar_chart Product.group(:name).sum(:price), width: "100", height: "700px", min: 0, max: 200, xtitle: "Price", ytitle: "Name", prefix: "$", decimal: ",", library: {backgroundColor: "#eee"}, download: "boom"  %>
</div>
</div>
</div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
<h4>Products</h4>

<%= link_to 'New Product', new_product_path %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%=  link_to product.name, product%></td>
        <td><%= product.description %></td>
        <td><%= product.price %> $</td>



      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

</div>
</div>
</div>
</div>
